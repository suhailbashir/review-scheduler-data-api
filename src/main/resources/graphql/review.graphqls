

type Review {
	reviewId: Long
    reviewName: String!
    dueForReview: String!
    frequency: String!
    reviewType: String!
    lastUpdated: String!
}

type Query {
    reviewlist(criteria: Criteria) : [Review]!
}

input Sort {
  direction: String!
  sortBy: String!
}

input Criteria {
    pageNumber: String!
    pageSize: String!
    sort: Sort
}


type Mutation {
    reviews( criteria: Criteria) : [Review]!
}